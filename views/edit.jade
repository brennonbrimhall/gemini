			tr
				td=pitData[i].team
				- for(var j = 0; j < pit.length; j++){
				td=pitData[i][pit[j]['field']]
				- }
				td
					a(class="btn btn-block btn-warning", href='/edit/pit/'+pitData[i].id) Edit
				td
					a(class="btn btn-block btn-danger", href='/edit/pit/delete/'+pitData[i].id) Delete
			- }
			- var matchesPlayed = i;