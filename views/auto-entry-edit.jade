extends page

block header
	li 
		a(href="/") Gemini Scouting System
		span(class="divider") /
	li 
		a(href="/edit") Edit
		span(class="divider") /
	li(class="active") Auto Entry

block content
	form(id="match", method="post")
		-var teamsRegex = "";
		-for (var i = 0; i < teams.length; ++i){
			- teamsRegex = teamsRegex+teams[i]+"|";
		-}
		
		//Preamble
		label(for="team") Team:
		input(name="team", type="text", required="required", pattern=teamsRegex, autofocus="autofocus", value=autoData.team)
		
		label(for="match") Match:
		input(name="match", type="number", step="1", required="required", min=1, max=maxMatchNumber, value=autoData.match)
		
		//Autonomous
		- for (var i = 0; i < auto.length; ++i){
		label(for=auto[i]['field'])=auto[i]['name']+":"
		- if (auto[i].values){
			- var regexp = "";
			- for (var j = 0; j < auto[i].values.length; ++j){
				- if(j == 0){
					- regexp = regexp + autoData[i].values[j];
				-}else{
					- regexp = regexp + "|" + autoData[i].values[j];
				-}
			-}
			input(name=auto[i]['field'], type="text", required="required", pattern=regexp, value=autoData[auto[i].field])
		- }else{
			input(name=auto[i]['field'], type="number", step="1", required="required", min=auto[i]['min'], max=auto[i]['max'], value=autoData[auto[i].field])
		-}
		-}
		
		//Submit
		input(class="btn btn-primary", name="submit", type="submit", value="Submit")